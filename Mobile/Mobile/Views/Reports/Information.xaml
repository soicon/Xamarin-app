                       Grid.ColumnSpan="4" Grid.Row="6" FontAttributes="Bold"
                       Text="{i18n:Translate info13}" />

                <Label VerticalOptions="StartAndExpand" FontSize="Default" FontAttributes="Bold"
                       TextColor="Black" Grid.Column="0" Grid.Row="7" Text="{i18n:Translate info13a}" />
                <Entry Grid.Column="1" Grid.Row="7" Keyboard="Numeric" 
                       VerticalOptions="Start" HorizontalOptions="End" WidthRequest="100" x:Name="txtAnswerA"
                       HorizontalTextAlignment="End" TextColor="Black" />
                <Label VerticalOptions="StartAndExpand" FontSize="Default" TextColor="Black" Grid.Column="2" FontAttributes="Bold"
                       Grid.Row="7" Text="{i18n:Translate info13d}" />
                <Entry VerticalOptions="Start"  HorizontalOptions="FillAndExpand" Keyboard="Numeric"
                       x:Name="txtAnswerD" Grid.Row="7" Grid.Column="3" />

                <Label VerticalOptions="StartAndExpand" FontAttributes="Bold"
                       FontSize="Default" TextColor="Black" Grid.Column="0" Grid.Row="8" Text="{i18n:Translate info13b}" />
                <Entry Grid.Column="1" Grid.Row="8" Keyboard="Numeric" VerticalOptions="Start" x:Name="txtAnswerB"
                       HorizontalOptions="End" WidthRequest="100" HorizontalTextAlignment="End" TextColor="Black" />
                <Label FontSize="Default" TextColor="Black" Grid.Column="2" FontAttributes="Bold"
                       Grid.Row="8" Text="{i18n:Translate info13e}" />
                <Entry VerticalOptions="Start"  HorizontalOptions="FillAndExpand" Keyboard="Numeric"
                       x:Name="txtAnswerE" Grid.Row="8" Grid.Column="3" />

                <Label VerticalOptions="StartAndExpand" FontSize="Default" FontAttributes="Bold"
                       TextColor="Black" Grid.Column="0" Grid.Row="9" Text="{i18n:Translate info13c}" />
                <Entry Grid.Column="1" Grid.Row="9" Keyboard="Numeric" VerticalOptions="Start" x:Name="txtAnswerC"
                       HorizontalOptions="End" WidthRequest="100" HorizontalTextAlignment="End" TextColor="Black" />
                <Label VerticalOptions="StartAndExpand"  FontSize="Default" TextColor="Black" Grid.Column="2"  FontAttributes="Bold"
                       Grid.Row="9" Text="{i18n:Translate info13f}" />
                <Entry VerticalOptions="Start"  HorizontalOptions="FillAndExpand"
                        Keyboard="Numeric" x:Name="txtAnswerF" Grid.Row="9" Grid.Column="3" />

                <Button x:Name="btnBack" Image="back.png" HeightRequest="40" TextColor="#FFFFFF" BackgroundColor="#FFFFFF"  Grid.Row="10"  HorizontalOptions="CenterAndExpand" VerticalOptions="End" />
                <Button x:Name="btnNext" VerticalOptions="Start" HeightRequest="40" TextColor="#FFFFFF" BackgroundColor="#FFFFFF"  Image="next.png" Grid.Row="10" Grid.Column="3" HorizontalOptions="Start"  />
            </Grid>
        </ScrollView>
    </ContentPage.Content>
