                       TextColor="Black" Grid.Column="0" Grid.Row="4" Text="{i18n:Translate info5}" />
                <Entry Grid.Column="1" Grid.Row="4" Keyboard="Numeric" VerticalOptions="Start" x:Name="txtFive"
                       HorizontalOptions="End" WidthRequest="100" HorizontalTextAlignment="End" TextColor="Black" />
                <Label FontSize="Default" TextColor="Black" Grid.Column="2" FontAttributes="Bold"
                       Grid.Row="4" Text="{i18n:Translate info11}" />
                <Entry VerticalOptions="Start"  HorizontalOptions="FillAndExpand" Keyboard="Numeric" x:Name="txtElevent" Grid.Row="4" Grid.Column="3" />

                <Label VerticalOptions="StartAndExpand" FontSize="Default" FontAttributes="Bold"
                       TextColor="Black" Grid.Column="0" Grid.Row="5" Text="{i18n:Translate info6}" />
                <Entry Grid.Column="1" Grid.Row="5" Keyboard="Numeric" VerticalOptions="Start" x:Name="txtSix"
                       HorizontalOptions="End" WidthRequest="100" HorizontalTextAlignment="End" TextColor="Black" />
                <Label FontSize="Default" TextColor="Black" Grid.Column="2" FontAttributes="Bold"
                       Grid.Row="5" Text="{i18n:Translate info12}" />
